# AI Lightning Server Configuration
# Copy this file to .env and modify as needed

# Flask Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=false
PORT=5000

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/ailightning

# Redis (for node coordination)
REDIS_URL=redis://localhost:6379

# Lightning Network (LND)
LND_NETWORK=testnet
LND_DIR=~/.lnd
# These are auto-generated from LND_DIR but can be overridden:
# LND_CERT_FILE=~/.lnd/tls.cert
# LND_MACAROON_FILE=~/.lnd/data/chain/bitcoin/testnet/admin.macaroon

# JWT Configuration
JWT_SECRET_KEY=another-secret-key-for-jwt
JWT_ACCESS_TOKEN_EXPIRES=3600

# Model Pricing (satoshis per minute)
MODEL_TINY_PRICE=500
MODEL_BASE_PRICE=1000
MODEL_LARGE_PRICE=2000

# Node Management
NODE_REGISTRATION_FEE=1000
NODE_PAYMENT_RATIO=0.7
