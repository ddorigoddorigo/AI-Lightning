# AI Lightning Server Configuration

# Flask Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=false
PORT=5000

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/ailightning

# Redis (for node coordination)
REDIS_URL=redis://localhost:6379

# Lightning Network (LND) Configuration
LND_NETWORK=mainnet
LND_REST_HOST=https://localhost:8080
LND_DIR=~/.lnd

# JWT Configuration
JWT_SECRET_KEY=another-secret-key-for-jwt
JWT_ACCESS_TOKEN_EXPIRES=3600

# Email Configuration (One.com SMTP)
SMTP_SERVER=send.one.com
SMTP_PORT=465
SMTP_USER=noreply@lightphon.com
SMTP_PASSWORD=PassWord123
SMTP_FROM=noreply@lightphon.com
SMTP_USE_SSL=true

# Alert thresholds
DISK_CRITICAL_PERCENT=90
